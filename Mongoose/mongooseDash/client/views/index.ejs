    <title>Document</title>
</head>

<body>
    <div class="contain">
        <h1>Kittens</h1>
        <h5>click on picture to edit info</h5>
        <% var x = 1%>
        <% for( kitten of kittens){ %>
        <div class="kittens">
            <a href="/edit/<%= kitten._id %>"><img src="<%=x%>.jpg" alt=""></a>
            <% x += 1%>
            <h6>name: <%= kitten.name %></h6>
            <h6>favorite food: <%= kitten.food%></h6>
           
        </div>
        <% } %>

        <a href="/new">create new kitten</a>
    </div>
    
</body>

</html>